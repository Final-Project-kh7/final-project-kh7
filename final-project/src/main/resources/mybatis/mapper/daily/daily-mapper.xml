<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="daily">
	
	<select id="sequnece" resultType="int">
		select daily_seq.nextval from dual
	</select>
	
	<insert id="dailyInsert" parameterType="PlanInsertServiceVO">
		insert into daily values(
			#{dailyNo}, #{plannerNo}, #{dailyStayDate}, #{dailyOrder}
		)	
	</insert>
	
	<select id="dailyOrderConfirm" parameterType="PlanInsertServiceVO" resultType="Integer">
		select daily_order from daily where daily_order = #{dailyOrder}
	</select>
	
	<select id="dailyNoConfirm" parameterType="PlanInsertServiceVO" resultType="int">
		select daily_no from daily where daily_order = #{dailyOrder}
	</select>
</mapper>